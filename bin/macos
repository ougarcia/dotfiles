#!/usr/bin/env bash

# TODO: Always run from $HOME
# TODO: Install Brew if missing. Brew instlaller will install xcode.

# Bootstraps a macos dev environment. Assumes you already installed Brew

# Symlink config files.
echo -e "Running symlink script"
./bin/symlink

# Install software using Brew
echo -e "Installing via homebrew"
brew bundle install

# Install plugins for tmux
ehco -e "Installing tmux plugin manager"
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
tmux source ~/.tmux.conf
~/.tmux/plugins/tpm/bin/install_plugins
